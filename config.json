        "connections": {
            "id": "[server_location]",
            "uuid": "[UUID]",
            "type": "vpn",
            "autoconnect": "false"
        },
        "vpn": {
            "service-type": "org.freedesktop.NetworkManager.openvpn",
            "username": "[pia_username]",
            "comp-lzo": "yes",
            "remote": "[server_host_address]",
            "cipher": "AES-256-CBC",
            "auth": "AES-256-CBC",
            "connection-type": "password",
            "password-flags": "0",
            "port": "[pia_port]",
            "proto-tcp": "no",
            "ca": "/etc/openvpn/pia[-ca.rsa.4096.crt]"
        },
        "vpn-secrets": {
